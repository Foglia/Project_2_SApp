{{!-- Remember: match names back and front end --}}
<div class="logincontainer">
<div id="login-form">
  <h2>Log In</h2>
  <form action="/auth/login" method="POST">

<div id="email">
    <label> Email
      <input id="inputlogin" type="email" name="email"  placeholder="" />
    </label>
</div>
<div id="password">
    <label> Password
      <input id="inputlogin" type="password" name="password" placeholder="" />
    </label>
    </div>
</div>
    <button id="loginbutton" type="submit">Log In</button>
    

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>