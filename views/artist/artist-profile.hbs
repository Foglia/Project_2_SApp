<h1>NNFT {{user.accountType}} Profile {{#ifEquals userId currentUser._id}}
<a href='/auth/edit/{{user._id}}' class='btn btn-primary'><button>Edit Profile</button></a>
{{/ifEquals}}</h1>
<hr/>
<div>
    <h2>Created By: {{user.firstName}} {{user.lastName}}</h2>
    <h3>{{description}}<h3>
    <h4>Individual Gallery</h4>
<div class="art-profile">    
{{#each user.uploads}}
<div class="artist-gallery">
  <a target="_blank" href="/auth/profile/{{author._id}}">
    <img src='{{imgUrl}}' alt='{{title}}' width="600" height="400">
  </a>
  <h3>{{title}}</h3>
  <p>Short Description:</p>
  <p>{{description}}</p>
</div>
{{/each}}
</div>
</div>